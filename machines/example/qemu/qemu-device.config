[machine]
  type = "q35"
  accel = "kvm:tcg"
  kernel = "${MACHINE_PATH}/libertine-linux.vmlinuz"
#  append = "x=y"

[boot-opts]
  order = "n"
  menu = "off"
  reboot-timeout = "60000"
  strict = "on"

[name]
  guest = "${MACHINE_NAME}"
  process = "qemu-${MACHINE_NAME}"

[memory]
  size = "128M"
  slots = "1"
  maxmem = "256M"

[smp-opts]
  cpus = "4"
  sockets = "2"
  cores = "2"
  threads = "2"
# this is at least cpus * cores * threads
  maxcpus = "8"

[drive]
  format = "qcow2"
  index = "0"
  media = "disk"
  if = "virtio"
  file = "${MACHINE_PATH}/drive.0.qcow2"

[device]
  driver = "virtio-net"
  netdev = "vmnic"

[netdev "vmnic"]
  type = "user"
